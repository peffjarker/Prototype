@using Prototype.Components.Services.Search
@using Telerik.Blazor
@inject IJSRuntime JS

@if (IsVisible && Results != null)
{
    <div class="global-search-results-portal"
         @ref="_resultsElement"
         @onclick:stopPropagation="true"
         style="@GetPositionStyle()">
        @if (Results.TotalCount == 0)
        {
            <div class="global-search-no-results">
                <TelerikSvgIcon Icon="@SvgIcon.Search" />
                <p>No results found for "@SearchText"</p>
            </div>
        }
        else
        {
            <div class="global-search-results-header">
                <span>@Results.TotalCount result@(Results.TotalCount == 1 ? "" : "s")</span>
                @if (Results.SearchDuration.TotalMilliseconds > 0)
                {
                    <span class="global-search-time">@($"{Results.SearchDuration.TotalMilliseconds:F0}ms")</span>
                }
            </div>

            @foreach (var group in Results.Groups)
            {
                <div class="global-search-group">
                    <div class="global-search-group-header">@group.Label</div>
                    @foreach (var result in group.Results)
                    {
                        var index = GetResultIndex(result);
                        var isSelected = index == SelectedIndex;
                        <div class="global-search-result-item @(isSelected ? "selected" : "")"
                             @onclick="async () => await OnResultClick.InvokeAsync(result)"
                             @onmouseenter="async () => await OnResultHover.InvokeAsync(index)">
                            <div class="global-search-result-content">
                                <div class="global-search-result-title">
                                    <span class="global-search-result-id">@result.Title</span>
                                    @if (!string.IsNullOrEmpty(result.Badge))
                                    {
                                        <span class="global-search-result-badge">@result.Badge</span>
                                    }
                                </div>
                                <div class="global-search-result-subtitle">@result.Subtitle</div>
                                @if (!string.IsNullOrEmpty(result.Description))
                                {
                                    <div class="global-search-result-description">@result.Description</div>
                                }
                            </div>
                            @if (result.Price.HasValue)
                            {
                                <div class="global-search-result-price">@result.Price.Value.ToString("C")</div>
                            }
                        </div>
                    }
                </div>
            }
        }
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public SearchResponse? Results { get; set; }
    [Parameter] public string SearchText { get; set; } = "";
    [Parameter] public int SelectedIndex { get; set; }
    [Parameter] public ElementReference AnchorElement { get; set; }
    [Parameter] public EventCallback<SearchResult> OnResultClick { get; set; }
    [Parameter] public EventCallback<int> OnResultHover { get; set; }

    private ElementReference _resultsElement;
    private string _positionStyle = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (IsVisible)
        {
            await UpdatePosition();
        }
    }

    private async Task UpdatePosition()
    {
        try
        {
            var position = await JS.InvokeAsync<PositionResult>("globalSearch.getPosition", AnchorElement);
            _positionStyle = $"top: {position.Top}px; left: {position.Left}px; width: {position.Width}px;";
            StateHasChanged();
        }
        catch { /* Element not ready */ }
    }

    private string GetPositionStyle() => _positionStyle;

    private int GetResultIndex(SearchResult result)
    {
        if (Results == null) return -1;

        var index = 0;
        foreach (var group in Results.Groups)
        {
            foreach (var r in group.Results)
            {
                if (r.Id == result.Id && r.Type == result.Type)
                    return index;
                index++;
            }
        }
        return -1;
    }

    public class PositionResult
    {
        public double Top { get; set; }
        public double Left { get; set; }
        public double Width { get; set; }
    }
}

