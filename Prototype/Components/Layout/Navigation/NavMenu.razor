{
    // ===== Franchise selector state =====
    private string? _selectedDealerId;
    private string? SelectedDealerId
    {
        get => _selectedDealerId;
        set
        {
            if (_selectedDealerId == value) return;
            _selectedDealerId = value;

            // find selected franchise and write all three params atomically
            var sel = Franchises.FirstOrDefault(f => f.DealerId == _selectedDealerId);
            if (sel is null)
            {
                Url.Set(("dealer", null));
            }
            else
            {
                Url.Set(
                    ("dealer", sel.DealerId)
                );
            }
        }
    }

    // Replace with your service
    private List<FranchiseOption> Franchises =
    [
        new("A1B2", "10001", "Alex",   "Meyer"),
        new("C3D4", "20002", "Jordan", "Price"),
        new("E5F6", "30003", "Sam",    "Carter"),
        new("G7H8", "40004", "Taylor", "Nguyen"),
    ];

    public sealed record FranchiseOption(string DealerId, string ClientKey, string FirstName, string LastName)
    {
        public string Display => $"{DealerId} — {FirstName} {LastName}";
    }

    // ===== Existing menu/drawer code =====
    private bool drawerOpen;
    private string? currentPath;

    protected override void OnInitialized()
    {
        currentPath = Nav.ToBaseRelativePath(Nav.Uri);

        // Initialize selector from URL snapshot
        if (Url.Current.TryGetValue("dealer", out var dealer) && !string.IsNullOrEmpty(dealer))
        {
            if (Franchises.Any(f => string.Equals(f.DealerId, dealer, StringComparison.OrdinalIgnoreCase)))
                _selectedDealerId = dealer; // set backing field to avoid loop
        }

        // React to external URL changes (sidebar/pages) to keep selector in sync
        Url.Changed += OnUrlChanged;
    }

    private void OnUrlChanged()
    {
        currentPath = Nav.ToBaseRelativePath(Nav.Uri);

        if (Url.Current.TryGetValue("dealer", out var dealer))
        {
            if (!string.Equals(_selectedDealerId, dealer, StringComparison.OrdinalIgnoreCase))
            {
                // update from URL without re-writing it
                _selectedDealerId = dealer;
                InvokeAsync(StateHasChanged);
            }
        }
    }

    private void Navigate(string href)
    {
        drawerOpen = false;
        Nav.NavigateTo(href);
    }

    private void ToggleDrawer() => drawerOpen = !drawerOpen;

    private string GetActiveClass(string href)
        => IsActive(href) ? "is-active" : string.Empty;

    private bool IsActive(string href)
    {
        if (string.IsNullOrWhiteSpace(currentPath)) return href == "/";
        var rel = "/" + currentPath.TrimStart('/');
        return string.Equals(rel, href, StringComparison.OrdinalIgnoreCase)
               || (href != "/" && rel.StartsWith(href + "/", StringComparison.OrdinalIgnoreCase));
    }

    private readonly List<MenuLink> MenuItems =
    [
        new("Home",          "/",                                SvgIcon.Home),
        new("PO / Transfer", "/po-transfer/items-on-order/?status=All", SvgIcon.ArrowsSwap),
        new("Help",          "/help",                            SvgIcon.Gear)
    ];

    public sealed class MenuLink
    {
        public string Text { get; }
        public string Href { get; }
        public ISvgIcon Icon { get; }
        public MenuLink(string text, string href, ISvgIcon icon)
        { Text = text; Href = href; Icon = icon; }
    }

    public void Dispose() => Url.Changed -= OnUrlChanged;
}


