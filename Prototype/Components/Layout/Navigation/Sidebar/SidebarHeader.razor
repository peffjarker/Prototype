@* Components/Layout/Navigation/Sidebar/SidebarHeader.razor *@
@using Prototype.Components.Layout.Navigation.Sidebar
@using Telerik.Blazor
@using Telerik.Blazor.Components
@using Services
@using global::Services
@implements IDisposable
@inject ISidebarState Sidebar
@inject IUrlState Url
@inject IFranchiseService FranchiseService

<div class="sidebar-header">
    @if (!Sidebar.IsCollapsed)
    {
        <div class="franchise-selector-wrapper">
            <label class="franchise-label">Dealer</label>
            <div class="franchise-combo-container">
                <TelerikComboBox TItem="FranchiseOption"
                                 TValue="string"
                                 Data="@FranchisesOrEmpty"
                                 TextField="@nameof(FranchiseOption.Display)"
                                 ValueField="@nameof(FranchiseOption.DealerId)"
                                 Value="@SelectedDealerIdBacking"
                                 ValueChanged="@OnValueChanged"
                                 Placeholder="Select franchise..."
                                 Filterable="true"
                                 FilterOperator="@StringFilterOperator.Contains"
                                 AllowCustom="true"
                                 Class="franchise-combo-header">
                    <ItemTemplate Context="franchise">
                        <div class="franchise-item">
                            <span class="franchise-id">@franchise.DealerId</span>
                            <span class="franchise-dot">•</span>
                            <span class="franchise-name">@franchise.FirstName @franchise.LastName</span>
                        </div>
                    </ItemTemplate>
                </TelerikComboBox>

                @if (!string.IsNullOrWhiteSpace(SelectedDealerIdBacking))
                {
                    <button type="button"
                            class="franchise-clear-btn"
                            @onclick="ClearSelection"
                            title="Clear selection"
                            aria-label="Clear dealer selection">
                        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M11 3L3 11M3 3L11 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                        </svg>
                    </button>
                }
            </div>
        </div>
    }
    else
    {
        <div class="collapsed-dealer-icon" title="Dealership selector (expand to use)">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>
    }
</div>

@code {
    [Parameter] public EventCallback<string?> OnFranchiseChanged { get; set; }

    private string? SelectedDealerIdBacking;
    private IReadOnlyList<FranchiseOption> _franchises = Array.Empty<FranchiseOption>();

    private IReadOnlyList<FranchiseOption> FranchisesOrEmpty => _franchises;

    protected override void OnInitialized()
    {
        SelectedDealerIdBacking = Url.Get("dealer");
        Url.Changed += HandleUrlChanged;
        Sidebar.StateChanged += OnSidebarStateChanged;
        _franchises = FranchiseService.GetFranchises();
    }

    protected override void OnParametersSet()
    {
        var dealerFromUrl = Url.Get("dealer");
        if (!string.Equals(SelectedDealerIdBacking, dealerFromUrl, StringComparison.Ordinal))
        {
            SelectedDealerIdBacking = dealerFromUrl;
        }
    }

    private void HandleUrlChanged()
    {
        var dealerFromUrl = Url.Get("dealer");
        if (!string.Equals(SelectedDealerIdBacking, dealerFromUrl, StringComparison.Ordinal))
        {
            SelectedDealerIdBacking = dealerFromUrl;
            InvokeAsync(StateHasChanged);
        }
    }

    private void OnSidebarStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task OnValueChanged(string? value)
    {
        var normalized = NormalizeValue(value);
        SelectedDealerIdBacking = normalized;
        Url.Set(("dealer", normalized));
        await OnFranchiseChanged.InvokeAsync(normalized);
    }

    private async Task ClearSelection()
    {
        SelectedDealerIdBacking = null;
        Url.Remove("dealer");
        await OnFranchiseChanged.InvokeAsync(null);
    }

    private static string? NormalizeValue(string? s)
        => string.IsNullOrWhiteSpace(s) ? null : s.Trim();

    public void Dispose()
    {
        Url.Changed -= HandleUrlChanged;
        Sidebar.StateChanged -= OnSidebarStateChanged;
    }
}

<style>
    .sidebar-header {
        display: flex;
        flex-direction: column;
        padding: 0.875rem;
        background: #ffffff;
        border-bottom: 1px solid #e2e8f0;
    }

    .franchise-label {
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #64748b;
        margin-bottom: 0.5rem;
    }

    .franchise-selector-wrapper {
        width: 100%;
    }

    .franchise-combo-container {
        position: relative;
        width: 100%;
    }

    .franchise-combo-header {
        width: 100%;
    }

    .franchise-clear-btn {
        position: absolute;
        right: 32px;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        color: #94a3b8;
        cursor: pointer;
        padding: 4px;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        transition: all 0.15s ease;
        z-index: 10;
    }

        .franchise-clear-btn:hover {
            background: #f1f5f9;
            color: #64748b;
        }

        .franchise-clear-btn:active {
            background: #e2e8f0;
            transform: translateY(-50%) scale(0.95);
        }

    .franchise-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.25rem 0;
    }

    .franchise-id {
        font-weight: 600;
        color: #3b82f6;
        font-size: 0.875rem;
    }

    .franchise-dot {
        color: #cbd5e1;
        font-weight: bold;
    }

    .franchise-name {
        color: #475569;
        font-size: 0.875rem;
    }

    .collapsed-dealer-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        color: #64748b;
        padding: 0.25rem;
    }

    /* Telerik ComboBox customization for header */
    .sidebar-header .k-input-inner {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }

    .sidebar-header .k-input {
        border-radius: 6px;
        border-color: #e2e8f0;
        transition: all 0.2s ease;
    }

        .sidebar-header .k-input:hover {
            border-color: #cbd5e1;
        }

        .sidebar-header .k-input:focus-within {
            border-color: #3b82f6;
            box-shadow: 0 0 0 1px #3b82f6;
        }

    .sidebar-collapsed .sidebar-header {
        padding: 0.75rem 0.5rem;
    }
</style>
