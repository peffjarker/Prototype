@page "/settings/appearance"
@using Telerik.Blazor
@using Telerik.Blazor.Components
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>Appearance - IBN Dealer Suite</PageTitle>

<main class="main-content appearance-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="title">Appearance</h1>
            <p class="subtitle">Customize how IBN Dealer Suite looks and feels</p>
        </div>
    </div>

    <div class="settings-container">
        <!-- Theme Selection -->
        <section class="settings-section">
            <div class="section-header">
                <TelerikSvgIcon Icon="@SvgIcon.Palette" />
                <div class="section-title-group">
                    <h2>Theme</h2>
                    <p class="section-description">Choose your preferred color scheme</p>
                </div>
            </div>
            <div class="section-content">
                <div class="theme-grid">
                    <div class="theme-card @(selectedTheme == "light" ? "active" : "")"
                         @onclick="@(() => SelectTheme("light"))">
                        <div class="theme-preview light-preview">
                            <div class="preview-header"></div>
                            <div class="preview-content">
                                <div class="preview-sidebar"></div>
                                <div class="preview-main">
                                    <div class="preview-bar"></div>
                                    <div class="preview-bar short"></div>
                                    <div class="preview-bar"></div>
                                </div>
                            </div>
                        </div>
                        <div class="theme-info">
                            <h3>Light</h3>
                            <p>Clean and bright interface</p>
                        </div>
                        @if (selectedTheme == "light")
                        {
                            <div class="theme-check">
                                <TelerikSvgIcon Icon="@SvgIcon.CheckCircle" />
                            </div>
                        }
                    </div>

                    <div class="theme-card @(selectedTheme == "dark" ? "active" : "")"
                         @onclick="@(() => SelectTheme("dark"))">
                        <div class="theme-preview dark-preview">
                            <div class="preview-header"></div>
                            <div class="preview-content">
                                <div class="preview-sidebar"></div>
                                <div class="preview-main">
                                    <div class="preview-bar"></div>
                                    <div class="preview-bar short"></div>
                                    <div class="preview-bar"></div>
                                </div>
                            </div>
                        </div>
                        <div class="theme-info">
                            <h3>Dark</h3>
                            <p>Easy on the eyes in low light</p>
                        </div>
                        @if (selectedTheme == "dark")
                        {
                            <div class="theme-check">
                                <TelerikSvgIcon Icon="@SvgIcon.CheckCircle" />
                            </div>
                        }
                    </div>

                    <div class="theme-card @(selectedTheme == "auto" ? "active" : "")"
                         @onclick="@(() => SelectTheme("auto"))">
                        <div class="theme-preview auto-preview">
                            <div class="preview-split">
                                <div class="preview-half light-preview">
                                    <div class="preview-header"></div>
                                    <div class="preview-content">
                                        <div class="preview-sidebar"></div>
                                        <div class="preview-main">
                                            <div class="preview-bar"></div>
                                            <div class="preview-bar short"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-half dark-preview">
                                    <div class="preview-header"></div>
                                    <div class="preview-content">
                                        <div class="preview-sidebar"></div>
                                        <div class="preview-main">
                                            <div class="preview-bar"></div>
                                            <div class="preview-bar short"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="theme-info">
                            <h3>Auto</h3>
                            <p>Match your system preferences</p>
                        </div>
                        @if (selectedTheme == "auto")
                        {
                            <div class="theme-check">
                                <TelerikSvgIcon Icon="@SvgIcon.CheckCircle" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- Accent Color -->
        <section class="settings-section">
            <div class="section-header">
                <TelerikSvgIcon Icon="@SvgIcon.DropletSlash" />
                <div class="section-title-group">
                    <h2>Accent Color</h2>
                    <p class="section-description">Choose your preferred accent color for buttons and highlights</p>
                </div>
            </div>
            <div class="section-content">
                <div class="color-grid">
                    @foreach (var color in accentColors)
                    {
                        <button class="color-swatch @(selectedAccent == color.Value ? "active" : "")"
                                style="background: @color.Color;"
                                @onclick="@(() => SelectAccent(color.Value))"
                                title="@color.Name"
                                aria-label="@color.Name">
                            @if (selectedAccent == color.Value)
                            {
                                <TelerikSvgIcon Icon="@SvgIcon.Check" Class="check-icon" />
                            }
                        </button>
                    }
                </div>
            </div>
        </section>

        <!-- Display Density -->
        <section class="settings-section">
            <div class="section-header">
                <TelerikSvgIcon Icon="@SvgIcon.Grid" />
                <div class="section-title-group">
                    <h2>Display Density</h2>
                    <p class="section-description">Adjust spacing and element sizing</p>
                </div>
            </div>
            <div class="section-content">
                <div class="density-options">
                    <label class="density-option @(density == "compact" ? "active" : "")">
                        <input type="radio"
                               name="density"
                               value="compact"
                               checked="@(density == "compact")"
                               @onchange="@(() => SelectDensity("compact"))" />
                        <div class="option-content">
                            <TelerikSvgIcon Icon="@SvgIcon.LayoutStacked" />
                            <div class="option-info">
                                <h3>Compact</h3>
                                <p>More content, less space</p>
                            </div>
                        </div>
                    </label>

                    <label class="density-option @(density == "comfortable" ? "active" : "")">
                        <input type="radio"
                               name="density"
                               value="comfortable"
                               checked="@(density == "comfortable")"
                               @onchange="@(() => SelectDensity("comfortable"))" />
                        <div class="option-content">
                            <TelerikSvgIcon Icon="@SvgIcon.Grid" />
                            <div class="option-info">
                                <h3>Comfortable</h3>
                                <p>Balanced spacing (recommended)</p>
                            </div>
                        </div>
                    </label>

                    <label class="density-option @(density == "spacious" ? "active" : "")">
                        <input type="radio"
                               name="density"
                               value="spacious"
                               checked="@(density == "spacious")"
                               @onchange="@(() => SelectDensity("spacious"))" />
                        <div class="option-content">
                            <TelerikSvgIcon Icon="@SvgIcon.Layout" />
                            <div class="option-info">
                                <h3>Spacious</h3>
                                <p>Maximum breathing room</p>
                            </div>
                        </div>
                    </label>
                </div>
            </div>
        </section>

        <!-- Typography -->
        <section class="settings-section">
            <div class="section-header">
                <TelerikSvgIcon Icon="@SvgIcon.Textbox" />
                <div class="section-title-group">
                    <h2>Typography</h2>
                    <p class="section-description">Customize text size and font</p>
                </div>
            </div>
            <div class="section-content">
                <div class="typography-controls">
                    <div class="control-group">
                        <label>Font Size</label>
                        <div class="slider-control">
                            <span class="slider-label">A</span>
                            <TelerikSlider @bind-Value="@fontSize"
                                           Min="12"
                                           Max="18"
                                           SmallStep="1"
                                           LargeStep="2"
                                           Class="font-slider">
                            </TelerikSlider>
                            <span class="slider-label large">A</span>
                            <span class="slider-value">@fontSize px</span>
                        </div>
                    </div>

                    <div class="control-group">
                        <label>Font Family</label>
                        <TelerikDropDownList Data="@fontFamilies"
                                             @bind-Value="@selectedFont"
                                             Class="font-dropdown">
                        </TelerikDropDownList>
                    </div>
                </div>

                <div class="typography-preview">
                    <p style="font-size: @(fontSize)px; font-family: @GetFontFamily();">
                        The quick brown fox jumps over the lazy dog. 0123456789
                    </p>
                </div>
            </div>
        </section>

        <!-- Additional Options -->
        <section class="settings-section">
            <div class="section-header">
                <TelerikSvgIcon Icon="@SvgIcon.Gear" />
                <div class="section-title-group">
                    <h2>Additional Options</h2>
                    <p class="section-description">Fine-tune your experience</p>
                </div>
            </div>
            <div class="section-content">
                <div class="options-list">
                    <label class="option-item">
                        <div class="option-left">
                            <TelerikCheckBox @bind-Value="@animations" Id="animations" />
                            <div class="option-text">
                                <h3>Enable Animations</h3>
                                <p>Smooth transitions and effects</p>
                            </div>
                        </div>
                    </label>

                    <label class="option-item">
                        <div class="option-left">
                            <TelerikCheckBox @bind-Value="@reducedMotion" Id="reducedMotion" />
                            <div class="option-text">
                                <h3>Reduce Motion</h3>
                                <p>Minimize movement for accessibility</p>
                            </div>
                        </div>
                    </label>

                    <label class="option-item">
                        <div class="option-left">
                            <TelerikCheckBox @bind-Value="@highContrast" Id="highContrast" />
                            <div class="option-text">
                                <h3>High Contrast</h3>
                                <p>Stronger colors for better visibility</p>
                            </div>
                        </div>
                    </label>

                    <label class="option-item">
                        <div class="option-left">
                            <TelerikCheckBox @bind-Value="@showGridLines" Id="gridLines" />
                            <div class="option-text">
                                <h3>Show Grid Lines</h3>
                                <p>Display borders in tables and grids</p>
                            </div>
                        </div>
                    </label>
                </div>
            </div>
        </section>

        <!-- Action Buttons -->
        <div class="settings-actions">
            <button class="btn outline" @onclick="ResetToDefaults">
                <TelerikSvgIcon Icon="@SvgIcon.ArrowRotateCcw" />
                Reset to Defaults
            </button>
            <div class="action-right">
                <button class="btn" @onclick="Cancel">Cancel</button>
                <button class="btn primary" @onclick="SaveChanges">
                    <TelerikSvgIcon Icon="@SvgIcon.Save" />
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</main>

@code {
    private string selectedTheme = "light";
    private string selectedAccent = "blue";
    private string density = "comfortable";
    private int fontSize = 14;
    private string selectedFont = "System Default";
    private bool animations = true;
    private bool reducedMotion = false;
    private bool highContrast = false;
    private bool showGridLines = true;

    private List<string> fontFamilies = new()
    {
        "System Default",
        "Helvetica Neue",
        "Segoe UI",
        "Inter",
        "Roboto",
        "Open Sans"
    };

    private List<AccentColor> accentColors = new()
    {
        new("Blue", "#0c5ea8", "blue"),
        new("Indigo", "#4f46e5", "indigo"),
        new("Purple", "#7c3aed", "purple"),
        new("Pink", "#db2777", "pink"),
        new("Red", "#dc2626", "red"),
        new("Orange", "#ea580c", "orange"),
        new("Yellow", "#ca8a04", "yellow"),
        new("Green", "#16a34a", "green"),
        new("Teal", "#0d9488", "teal"),
        new("Cyan", "#0891b2", "cyan")
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        try
        {
            var themeJson = await JS.InvokeAsync<string>("localStorage.getItem", "ibn-theme");
            if (!string.IsNullOrEmpty(themeJson))
            {
                selectedTheme = themeJson.Trim('"');
            }

            var accentJson = await JS.InvokeAsync<string>("localStorage.getItem", "ibn-accent");
            if (!string.IsNullOrEmpty(accentJson))
            {
                selectedAccent = accentJson.Trim('"');
            }

            var densityJson = await JS.InvokeAsync<string>("localStorage.getItem", "ibn-density");
            if (!string.IsNullOrEmpty(densityJson))
            {
                density = densityJson.Trim('"');
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
        }
    }

    private void SelectTheme(string theme)
    {
        selectedTheme = theme;
    }

    private void SelectAccent(string accent)
    {
        selectedAccent = accent;
    }

    private void SelectDensity(string value)
    {
        density = value;
    }

    private string GetFontFamily()
    {
        return selectedFont switch
        {
            "Helvetica Neue" => "'Helvetica Neue', Helvetica, Arial, sans-serif",
            "Segoe UI" => "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif",
            "Inter" => "'Inter', system-ui, sans-serif",
            "Roboto" => "'Roboto', sans-serif",
            "Open Sans" => "'Open Sans', sans-serif",
            _ => "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
        };
    }

    private async Task SaveChanges()
    {
        try
        {
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-theme", selectedTheme);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-accent", selectedAccent);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-density", density);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-fontSize", fontSize);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-font", selectedFont);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-animations", animations);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-reducedMotion", reducedMotion);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-highContrast", highContrast);
            await JS.InvokeVoidAsync("localStorage.setItem", "ibn-gridLines", showGridLines);

            // Apply changes immediately (you would typically call a JS function to update CSS variables)
            await JS.InvokeVoidAsync("console.log", "Settings saved successfully");

            Nav.NavigateTo("/settings");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving settings: {ex.Message}");
        }
    }

    private void Cancel()
    {
        Nav.NavigateTo("/settings");
    }

    private async Task ResetToDefaults()
    {
        selectedTheme = "light";
        selectedAccent = "blue";
        density = "comfortable";
        fontSize = 14;
        selectedFont = "System Default";
        animations = true;
        reducedMotion = false;
        highContrast = false;
        showGridLines = true;
        StateHasChanged();
    }

    public class AccentColor
    {
        public string Name { get; set; }
        public string Color { get; set; }
        public string Value { get; set; }

        public AccentColor(string name, string color, string value)
        {
            Name = name;
            Color = color;
            Value = value;
        }
    }
}

